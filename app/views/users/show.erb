<!-- /users/show -->
<h1>Welcome, <%= Helpers.current_user(session).username %> to Fwitter tweets</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<table>
  <tr>
    <th>Tweet Id</th>
    <th>By</th>
    <th>Content</th>
    <th>View</th>
  </tr>

  <% @user.tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.id %></td>
      <td><%= @user.username %></td>
      <td><%= tweet.content %></td>
      <td><a href="/tweets/<%= tweet.id %>">View</a></td>
    </tr>
  <% end %>
<table>

<br></br>

<!-- Link to Create New Tweet -->
<form action="/tweets/new" method="GET">
  <input type="submit" value="New Tweet">
</form>

<!-- Link to Log Out -->
<form action="/logout" method="GET">
  <input type="submit" id="logout" value="Log Out">
</form>
